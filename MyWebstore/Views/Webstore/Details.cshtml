@model MyWebstore.Models.StoreViewModel

@{
    ViewData["Title"] = "Webshop";
}

<h2>Details about @Model.CurrentStoreItem.Title</h2>
<br/>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.CurrentStoreItem.Title" class="control-label"></label>
            <input asp-for="@Model.CurrentStoreItem.Title" class="form-control" disabled />
            <span asp-validation-for="@Model.CurrentStoreItem.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CurrentStoreItem.Description" class="control-label"></label>
            <input asp-for="@Model.CurrentStoreItem.Description" class="form-control" disabled />
            <span asp-validation-for="@Model.CurrentStoreItem.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CurrentStoreItem.Price" class="control-label"></label>
            <input asp-for="@Model.CurrentStoreItem.Price" class="form-control" disabled />
            <span asp-validation-for="@Model.CurrentStoreItem.Price" class="text-danger"></span>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to the Shop</a>
</div>