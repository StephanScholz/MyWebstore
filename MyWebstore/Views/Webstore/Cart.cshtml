@model MyWebstore.Models.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Here is your cart!</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartItem.StoreItem.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartItem.StoreItem.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartItem.StoreItem.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartItem.Amount)
            </th>
        </tr>
    </thead>
    <tbody>
        @{

            decimal? sum = 0;

            foreach (var item in Model.CartItemList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreItem.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreItem.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreItem.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <div class="AmountDelete">
                            @using (Html.BeginForm("DeleteCartItem", "Webstore"))
                            {
                                @Html.DropDownListFor(c => c.CartItem.Amount,
             Enumerable.Range(1, item.Amount).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                                <input id="cartItemId" name="cartItemId" type="hidden" value=@item.Id />
                                <input class="SubmitButton" type="submit" value="Delete" />
                            }
                        </div>
                    </td>
                </tr>

                sum = sum + (item.Amount * item.StoreItem.Price);
            }

            <tr>
                <td>
                    <b>Total</b>
                </td>
                <td>
                </td>
                <td>
                    <b>@sum &#128;</b>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
@using (Html.BeginForm("CartCheckout", "Webstore")) {
    
}
<input class="CheckoutButton" type="submit" value="Checkout" />
<br/><br/>
<div>
    <a asp-action="Index">Back to the Shop</a>
</div>
